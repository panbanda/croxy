[server]
host = "127.0.0.1"
port = 3100

[backends.anthropic]
url = "https://api.anthropic.com"

[backends.ollama]
url = "http://localhost:11434"
strip_auth = true
api_key = "ollama"

[[routes]]
pattern = "opus"
backend = "anthropic"

[[routes]]
pattern = "sonnet|haiku"
backend = "ollama"
model = "qwen2.5-coder:32b"

[default]
backend = "anthropic"
